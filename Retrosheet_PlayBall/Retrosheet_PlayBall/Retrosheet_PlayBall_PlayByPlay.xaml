<Page x:Class="Retrosheet_PlayBall.Retrosheet_PlayBall_PlayByPlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Retrosheet_PlayBall"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1200"
      Title="Retrosheet Play Ball">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="PageTitle" Grid.Row="0" Grid.ColumnSpan="4" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="12" FontWeight="Bold"/>

        <DataGrid Name="dgGameInfoItems" GridLinesVisibility="None" BorderThickness="1,0,0,0" ColumnHeaderHeight="22" FontSize="10" RowHeaderWidth="0" 
                  AutoGenerateColumns="False" 
                  Grid.Column="0"
                  Grid.Row="1"
                  Grid.RowSpan="2"
                  CanUserAddRows="False"
                  HeadersVisibility="None">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header=""  Binding="{Binding GameItemDesc}" />
                <DataGridTextColumn Header=""  Binding="{Binding GameItemValue}" Width="200" >
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>

        <StackPanel Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Orientation="Horizontal" >

            <DataGrid Name="dgVisitingPlayers"  GridLinesVisibility="None" BorderThickness="0,0,1,0"  RowHeight="15" ColumnHeaderHeight="22" FontSize="10" RowHeaderWidth="0" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Batting Order" Binding="{Binding Batting}"/>
                    <DataGridTextColumn Header="Visiting Team" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Field Position" Binding="{Binding Position}"/>
                    <DataGridTextColumn Header="Bats / Throws"  Binding="{Binding BatsThrows}"/>
                </DataGrid.Columns>

            </DataGrid>

            <DataGrid Name="dgHomePlayers" GridLinesVisibility="None" BorderThickness="1,0,0,0" RowHeight="15" ColumnHeaderHeight="22" FontSize="10" RowHeaderWidth="0"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Home Team" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Field Position" Binding="{Binding Position}"/>
                    <DataGridTextColumn Header="Bats / Throws"  Binding="{Binding BatsThrows}"/>
                </DataGrid.Columns>

            </DataGrid>

            <Image Name="imgEventHitLocationDiagram" Source="{Binding HitLocationDiagram}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="250" Width="250" />
        </StackPanel>

        <DataGrid Grid.Column="0" 
                  Grid.Row="3" 
                  Name="dgPlayBevents" 
                  RowHeaderWidth="0" 
                  Grid.ColumnSpan="4" 
                  ColumnHeaderHeight="22" 
                  FontSize="10" 
                  AutoGenerateColumns="False" 
                  Margin="0,0,-78,0"
                  CanUserAddRows="False"
                  HorizontalGridLinesBrush="LightGray"
                  VerticalGridLinesBrush="LightGray"
                  SelectionMode="Single"
                  CanUserSortColumns="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False"
                  CanUserResizeRows="False"
                  IsReadOnly="True"
                  SelectedCellsChanged="dbPlayEvents_SelectedCellsChanged"
                  SelectedIndex="0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Inning"  Binding="{Binding Inning}" />
                <DataGridTextColumn Header="Team Name"  Binding="{Binding TeamName}"  Width="75"/>
                <DataGridTextColumn Header="At Bat" Binding="{Binding BatterName}"  Width="100" />
                <DataGridTextColumn Header="Count" Binding="{Binding CountDesc}" />
                <DataGridTextColumn Header="Pitches" Binding="{Binding PitchDesc}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Details" Binding="{Binding PlayDetails}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>


                <DataGridTextColumn Header="Runner Advances" Binding="{Binding DestinationDetails}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>                
                
                <DataGridTextColumn Header="Play on Runners" Binding="{Binding PlayOnRunnerDetails}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Errors" Binding="{Binding ErrorDetails}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" Orientation="Vertical" Margin="10,0,0,10">
            <TextBlock Name="tblkPitcherAdjustments" Text="{Binding PitcherAdjustment}" TextWrapping="Wrap"/>
            <TextBlock Name="tblkBatterAdjustments" Text="{Binding BatterAdjustment}" TextWrapping="Wrap"/>
            <TextBlock Name="tblkSubstitutePlayers" Text="{Binding SubstitutePlayer}" TextWrapping="Wrap"/>
            <TextBlock Name="tblkSubstituteUmpires" Text="{Binding SubstituteUmpire}" TextWrapping="Wrap"/>
            <TextBlock Name="tblkComments" Text="{Binding GameComment}" TextWrapping="Wrap"/>
            <TextBlock Name="tblkReplayComment" Text="{Binding ReplayComment}" TextWrapping="Wrap"/>
            <TextBlock Name="tblkReplayRuling" Text="{Binding ReplayRuling}" TextWrapping="Wrap"/>
        </StackPanel>
 
    </Grid>
</Page>
